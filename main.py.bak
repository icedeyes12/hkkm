    print(f"[Stub] {action} triggered from {path}")

# ---------------- GLOBAL INPUT ----------------
def get_choice(prompt="> "):
    choice = input(prompt).strip().lower()
    
    # code detection for test mode
    if choice in ["ð“‚¸", "titit"]:
        return "testmode"
    
    if choice == "exit":
        print("ðŸ‘‹ Exiting game...")
        sys.exit(0)
    return choice

